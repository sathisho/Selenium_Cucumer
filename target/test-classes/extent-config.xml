<?xml version="1.0" encoding="UTF-8"?>
<extentreports>
    <configuration>
        <!-- Report theme: STANDARD or DARK -->
        <theme>DARK</theme>
        
        <!-- Document encoding -->
        <encoding>UTF-8</encoding>
        
        <!-- Protocol for script and stylesheets: HTTP or HTTPS -->
        <protocol>HTTPS</protocol>
        
        <!-- Title of the document -->
        <documentTitle>Selenium Automation Test Report</documentTitle>
        
        <!-- Name of the report -->
        <reportName>Selenium Cucumber BDD - Test Execution Report</reportName>
        
        <!-- Timestamp format -->
        <timeStampFormat>MMM dd, yyyy HH:mm:ss</timeStampFormat>
        
        <!-- Show log statements -->
        <logStatusFilter>0</logStatusFilter>
        
        <!-- Custom CSS for better styling -->
        <css>
            body {
                font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            }
            .card {
                box-shadow: 0 4px 8px rgba(0,0,0,0.2);
                border-radius: 8px;
            }
            .test-passed {
                background-color: #d4edda;
                color: #155724;
            }
            .test-failed {
                background-color: #f8d7da;
                color: #721c24;
            }
        </css>
        
        <!-- Custom JavaScript -->
        <js>
        </js>
    </configuration>
</extentreports>
